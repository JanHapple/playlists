{% extends 'base.html.twig' %}

{% block title %}Playlist form{% endblock %}

{% block body %}

    <div class="my-5">
        {{ form_errors(form) }}

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.band) }}
            <div class="mb-1">Duration:</div>
            <div class="row mb-2">
                <div class="col">
                    {{ form_row(form.minDuration) }}
                </div>
                <div class="col">
                    {{ form_row(form.secDuration) }}
                </div>
            </div>
            {{ form_row(form.image) }}
            <button type="submit" class="btn btn-outline-success">{{ 'edit' in app.request.pathinfo ? 'edit' : 'create' }}</button>
        {{ form_end(form) }}
    </div>

{% endblock %}