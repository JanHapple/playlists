<form method="post" action="{{ path('app_delete_song', {'id': song.id }) }}" onsubmit="return confirm('Are you sure, you want to delete that song?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ song.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa-solid fa-trash"></i>
    </button>
</form>